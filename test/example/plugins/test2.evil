plugin 'Twitter' do |p|
  p.http.base_uri 'http://twitter.com'
  
  p.configure do |c|
    c.text :username
    c.password :password
  end
  
  p.tag :user_timeline do |args|
    resp = p.http.get("/statuses/user_timeline/#{args[:user]}.json")
    
    resp.collect do |status|
      body :status => status
    end
  end
end